<% @page_title = "UserAuth | Signup" -%>
<div class = "Sign_form">
	<h1>Sign Up</h1>
	<%=form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
		<p> Username: </br> <%= f.text_field :username, id: "username_field"%></p>
		<p> Email: </br> <%= f.text_field :email, id: "email_field"%></p>
		<p> Password: </br> <%= f.password_field :password, id: "password_field"%></p>
		<p> Password Confirmation:</br> <%= f.password_field :password_confirmation, id: "pass_conf_field"%></p>
		<%= f.submit :Signup, id: "submit_button"%> </br>
	<%= flash[:notice] %>
	<% end %>

	<% if @user.errors.any?%>
		<ul class ="Signup_Errors">
		<% for message_error in @user.errors.full_messages %>
			<li>*<%= message_error %></li>
		<%end%>
		</ul>
	<%end%>
</div>	
